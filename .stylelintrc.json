{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-prettier/recommended"
  ],
  "plugins": [
    "stylelint-prettier"
  ],
  "ignoreFiles": [
    "**/*.{js,json}"
  ],
  "rules": {
    "max-nesting-depth": 5,
    "color-hex-case": "lower",
    "selector-class-pattern": null, 
    "at-rule-empty-line-before": [
      "always",
      {
        "except": [
          "blockless-after-same-name-blockless",
          "first-nested"
        ],
        "ignore": [
          "after-comment"
        ]
      }
    ]
  }
}